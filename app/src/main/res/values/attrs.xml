<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="LqhBottomTab">
        <!--默认状态下的文字颜色-->
        <attr name="lqhtab_item_textColorNormal" format="color"/>
        <attr name="lqhtab_item_defaultSelectPosition" format="integer"/>
        <!--选中状态下的文字颜色-->
        <attr name="lqhtab_item_textColorSelected" format="color"/>
        <!--默认状态下的大小-->
        <attr name="lqhtab_item_textSizeNormal" format="dimension"/>
        <!--选中状态下的文字大小-->
        <attr name="lqhtab_item_textSizeSelected" format="dimension"/>
        <!--文字和图标的顶部距离-->
        <attr name="lqhtab_item_iconMargin" format="dimension"/>
        <!--设置图标的宽度-->
        <attr name="lqhtab_item_iconWidth" format="dimension"/>
        <!--设置图标的高度-->
        <attr name="lqhtab_item_iconHeight" format="dimension"/>
    </declare-styleable>
    <declare-styleable name="LqhBottomItemView">
        <!--默认状态下的文字颜色-->
        <attr name="lqhitem_textColorNormal" format="color"/>
        <!--选中状态下的文字颜色-->
        <attr name="lqhitem_textColorSelected" format="color"/>
        <!--默认状态下的大小-->
        <attr name="lqhitem_textSizeNormal" format="dimension"/>
        <!--选中状态下的文字大小-->
        <attr name="lqhitem_textSizeSelected" format="dimension"/>
        <!--文字和图标的顶部距离-->
        <attr name="lqhitem_iconMargin" format="dimension"/>
        <!--设置图标的宽度-->
        <attr name="lqhitem_iconWidth" format="dimension"/>
        <!--设置图标的高度-->
        <attr name="lqhitem_iconHeight" format="dimension"/>


        <!--默认状态下的图标-->
        <attr name="lqhitem_iconNormal" format="reference"/>
        <!--选中状态下的图标-->
        <attr name="lqhitem_iconSelected" format="reference"/>
        <!--文本-->
        <attr name="lqhitem_itemText" format="string"/>
        <!--自定义id-->
        <attr name="lqhitem_customLayoutId" format="reference"/>
    </declare-styleable>
    <declare-styleable name="LqhUnreadView">
        <!-- 当为几个字的时候是在为圆形-->
        <attr name="unr_circleNumberCount" format="integer"/>
        <attr name="unr_unreadText" format="reference|string"/>
        <attr name="unr_maxNumber" format="integer"/>
        <attr name="unr_unNumber" format="integer"/>
        <attr name="unr_minNumber" format="integer"/>
    </declare-styleable>
    <declare-styleable name="LqhStateView">
        <attr name="Lqh_emptyResource" format="reference" />
        <attr name="Lqh_retryResource" format="reference" />
        <attr name="Lqh_loadingResource" format="reference" />
    </declare-styleable>
</resources>