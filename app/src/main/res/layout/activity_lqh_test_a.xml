<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:clipChildren="false"
    >
   <com.google.android.material.card.MaterialCardView
       android:id="@+id/materialCardView"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       app:strokeColor="@color/selector_test"
       app:strokeWidth="@dimen/dp_10"
       android:theme="@style/Theme.MaterialComponents"
       app:cardCornerRadius="@dimen/dp_20"
       >
      <ImageView
          android:src="@drawable/default_avatar"
          android:layout_width="@dimen/dp_100"
          android:layout_height="@dimen/dp_100"/>
   </com.google.android.material.card.MaterialCardView>
   <com.google.android.material.imageview.ShapeableImageView
       android:id="@+id/shapeableImageView"
       app:strokeWidth="@dimen/dp_10"
       app:strokeColor="@color/selector_test1"
       android:layout_width="@dimen/dp_100"
       android:layout_height="@dimen/dp_100"
       android:src="@drawable/default_avatar"
       />
   <Button
       android:id="@+id/btn_changeImageView"
       android:text="变色"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"/>
   <TextView
       android:id="@+id/tv_test"
       android:background="@color/red_beautiful_color"
       android:layout_width="match_parent"
       android:layout_height="@dimen/dp_30"
       android:textColor="@color/selector_test1"
       android:text="动画返回"/>
   <TextView
       android:id="@+id/tv_test1"
       android:background="@color/yellow_beautiful_color"
       android:layout_width="match_parent"
       android:layout_height="@dimen/dp_30"
       android:text="发送数据"/>
   <TextView
       android:id="@+id/tv_test2"
       android:background="@color/yellow_beautiful_color"
       android:layout_width="match_parent"
       android:layout_height="@dimen/dp_30"
       android:text="去java类型的activity"/>
   <TextView
       android:id="@+id/tv_testToast"
       android:background="@color/yellow_beautiful_color"
       android:layout_width="match_parent"
       android:layout_height="@dimen/dp_30"
       android:text="Toast一下"/>
</LinearLayout>